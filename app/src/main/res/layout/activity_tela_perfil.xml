<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPerfil"
    android:background="#013794">

    <Button
        android:id="@+id/buttonHistorico"
        android:layout_width="176dp"
        android:layout_height="201dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="151dp"
        android:background="@drawable/hist"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_constraintStart_toEndOf="@+id/buttonEdit"
        app:layout_constraintTop_toTopOf="@+id/textPerfil"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="176dp"
        android:layout_height="201dp"
        android:layout_marginTop="151dp"
        android:background="@drawable/edi"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_constraintStart_toStartOf="@+id/textPerfil"
        app:layout_constraintTop_toTopOf="@+id/textPerfil"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/Add"
        android:layout_width="176dp"
        android:layout_height="201dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/adi"
        app:layout_constraintEnd_toStartOf="@+id/Branco"
        app:layout_constraintTop_toBottomOf="@+id/buttonEdit"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/Branco"
        android:layout_width="176dp"
        android:layout_height="201dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/card"
        app:layout_constraintEnd_toEndOf="@+id/buttonHistorico"
        app:layout_constraintTop_toBottomOf="@+id/buttonHistorico"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textPerfil"
        android:layout_width="362dp"
        android:layout_height="143dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/card"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/dm_sans"
        android:text="Ola,"
        android:textColor="#030302"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textPerfil"
        app:layout_constraintTop_toTopOf="@+id/textPerfil" />

    <TextView
        android:id="@+id/NomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/dm_sans"
        android:text="NomeDeUsuario"
        android:textColor="#030302"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textPerfil"
        app:layout_constraintTop_toTopOf="@+id/textPerfil" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageUser"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:src="@drawable/img"
        app:layout_constraintStart_toEndOf="@+id/Ola"
        app:layout_constraintTop_toTopOf="@+id/textPerfil" />

    <TextView
        android:id="@+id/textPerfil3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/dm_sans"
        android:text="PERFIL"
        android:textColor="#EBE8E9"
        android:textSize="16sp"
        android:textStyle="bold"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_constraintBottom_toTopOf="@+id/textPerfil"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="468dp"
        android:fontFamily="@font/dm_sans"
        android:text="Easy Financy"
        android:textColor="#EBE8E9"
        android:textSize="16sp"
        android:textStyle="bold"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:layout_constraintStart_toStartOf="@+id/buttonEdit"
        app:layout_constraintTop_toBottomOf="@+id/textPerfil" />

</androidx.constraintlayout.widget.ConstraintLayout>